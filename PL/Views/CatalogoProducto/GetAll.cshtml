@model Proyecto_ENT.CatalogoProducto
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="=col-md-12">
            <h2>Catalogo de Productos</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h5>Seleccione Nuevo para agregar un producto</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 ">
            @Html.ActionLink("Nuevo", "Form", "CatalogoProducto", htmlAttributes: new { @class = "btn btn-success" })
        </div>
        <br> <br />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <td>Editar</td>
                        <td class="hidden">IdProducto</td>
                        <td>Descripcion</td>
                        <td>IdUsuario </td>
                        <td>FechaCreacion</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Proyecto_ENT.CatalogoProducto catalogoProducto in Model.CatalogosProductos)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "CatalogoProducto", new { IdProducto = catalogoProducto.IdProducto })"></a></td>

                            <td class="hidden">@catalogoProducto.IdProducto</td>
                            <td>@catalogoProducto.Descripcion</td>
                            <td>@catalogoProducto.IdUsuario</td>
                            <td>@catalogoProducto.FechaCreacion</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

